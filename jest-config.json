{
    "bail": true,
    "verbose": true,
    "collectCoverage": true,
    "modulePaths": [
        "<rootDir>/src"
    ],
    "moduleDirectories":  ["node_modules", "src"],
    "moduleFileExtensions": [
        "js",
        "json",
        "jsx"
    ],
    "testPathDirs": [
        "<rootDir>/test"
    ],
    "collectCoverageFrom": [
        "src/**/*.js",
        "src/**/*.jsx",
        "!node_modules/**"
    ],
    "coverageDirectory": "coverage",
    "coveragePathIgnorePatterns": [
        "node_modules"
    ],
    "coverageThreshold": {
        "global": {
            "branches":   90,
            "functions": 90,
            "lines": 90,
            "statements": 90
        }
    }
}
